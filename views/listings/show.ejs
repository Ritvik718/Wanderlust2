<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<style>
  .starability-slot {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 10px;
  }

  .starability-slot input[type="radio"] {
    display: none;
  }

  .starability-slot label {
    cursor: pointer;
    padding: 0 5px;
  }

  /* Media query for small screens like phones */
  @media only screen and (max-width: 767px) {
    .starability-slot label {
      font-size: 12px;
      padding: 0 2px;
    }

    .show-img {
      max-height: 200px;
    }
  }

  /* Media query for larger screens */
  @media only screen and (min-width: 768px) {
    .show-img {
      max-height: 300px;
    }
  }

  #map {
    height: 400px;
    width: 100%;
  }

  .positive {
    color: green;
    font-weight: bold;
  }

  .negative {
    color: red;
    font-weight: bold;
  }
</style>

<!-- Listing Details -->
<div class="row mt-3 justify-content-center">
  <div class="col-12 col-md-5 ms-md-3 mb-3 border border-white">
    <h3 class="text">Listing Details</h3>
    <div class="card show-card listing-card">
      <img
        src="<%= listing.image ? listing.image.url : '/path/to/placeholder.jpg' %>"
        class="card-img-top show-img img-fluid"
        alt="listing_img"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          <b>Owned By:</b> <i><%= listing.owner.username %></i><br />
          <%= listing.description %><br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %><br />
          <%= listing.location %><br />
          <%= listing.country %><br />
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Review Form and Reviews -->
<div class="row mt-3 justify-content-center">
  <div class="col-12 col-md-5 ms-md-3 mb-3">
    <!-- Leave a Review Form -->
    <% if(currUser) { %>
    <h4 class="text">Leave a Review</h4>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a comment!</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>

    <!-- Display All Reviews -->
    <% if(listing.reviews.length > 0) { %>
    <hr />
    <h4 class="text">All Reviews</h4>
    <div class="row justify-content-center">
      <% for(let review of listing.reviews) { %>
      <div class="card col-12 col-md-5 ms-md-3 mb-3">
        <div class="card-body px-0">
          <h5 class="card-title"><%= review.author.username %></h5>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>

          <!-- Display Sentiment Analysis -->
          <p class="card-text">
            <strong>Sentiment:</strong>
            <span
              style="color: <%= review.sentimentCategory === 'positive' ? 'green' : review.sentimentCategory === 'negative' ? 'red' : 'gray' %>;"
            >
              <%= review.sentimentCategory.charAt(0).toUpperCase() +
              review.sentimentCategory.slice(1) %>
            </span>
          </p>
          <p class="card-text">Sentiment Score: <%= review.sentimentScore %></p>
        </div>

        <% if(currUser && currUser._id.equals(review.author._id)) { %>
        <form
          class="mb-3"
          method="POST"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button
            class="btn btn-sm btn-dark"
            onclick="return confirm('Are you sure?')"
          >
            Delete
          </button>
        </form>
        <% } %>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
</div>

<!-- Map Section -->
<% if (listing.location && listing.country) { %>
<div class="row mt-3 justify-content-center">
  <div class="col-12 col-md-5 ms-md-3 mb-3">
    <hr />
    <h3 class="text-center">Where youâ€™ll be</h3>
    <div id="map"></div>
  </div>
</div>
<% } %>

<script src="/css/js/map.js"></script>
